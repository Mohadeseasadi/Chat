<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>ChatRoom</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/png" href="/images/chat-logo.png">
</head>

<body>
  <div class="container">

    <!-- Header bar when form active -->
    <div class="form-header">
      <button id="backBtn"><i class="fa fa-arrow-left"></i></button>
      <div id="formLogo"></div>
    </div>

    <!-- Main Menu Buttons (Glass) -->
    <div class="main-menu" id="mainMenu">

      <button class="menu-btn" data-form="profileForm" data-icon="fa-user">
        <i class="fa fa-user"></i>
        <span>Profile</span>
      </button>

      <button class="menu-btn" data-form="searchForm" data-icon="fa-search">
        <i class="fa fa-search"></i>
        <span>Search</span>
      </button>

      <button class="menu-btn" data-form="friendsForm" data-icon="fa-friends">
        <i class="fa fa-user-friends"></i>
        <span>Friends</span>
      </button>

      <button class="menu-btn" data-form="personalForm" data-icon="fa-personal">
        <i class="fa fa-comment-dots"></i>
        <span>Personal Chat</span>
      </button>

      <button class="menu-btn" data-form="roomsForm" data-icon="fa-rooms">
        <i class="fa fa-layer-group"></i>
        <span>Rooms</span>
      </button>

    </div>

    <!-- Form container -->
    <div class="form-container">
      <%- include('forms/profile') %>
      <%- include('forms/search') %>
      <%- include('forms/friends') %>
      <%- include('forms/personal') %>
      <%- include('forms/rooms') %>
    </div>

    <%- include('partials/footer') %>

  </div>

  <script src="/js/main.js"></script>
</body>
</html>
