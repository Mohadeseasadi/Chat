{
  "name": "chat-room",
  "version": "0.0.0",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "npm run build && cross-env NODE_ENV=production node build/server.js",
    "build": "tsc && tsc-alias && copyfiles -u 1 \"src/**/*.pem\" \"src/**/*.ttf\" build/",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write src/**/*.ts",
    "test": "set NODE_ENV=test&&set ENV=test&& jest --runInBand --forceExit --coverage --detectOpenHandles"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.20.4",
    "socket.io": "^4.8.3"
  }
}
